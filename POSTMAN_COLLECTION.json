{
  "info": {
    "name": "SYNERGIA API",
    "description": "API для тестирования проекта СИНЕРГИЯ",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:3000",
      "type": "string"
    },
    {
      "key": "token",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    if (response.user) {",
                  "        pm.collectionVariables.set('token', pm.cookies.get('token'));",
                  "    }",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"ваш_email@example.com\",\n  \"password\": \"ваш_пароль\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/users/login",
              "host": ["{{base_url}}"],
              "path": ["api", "users", "login"]
            }
          }
        },
        {
          "name": "Get Current User",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/users/me",
              "host": ["{{base_url}}"],
              "path": ["api", "users", "me"]
            }
          }
        },
        {
          "name": "Register",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"newuser@example.com\",\n  \"password\": \"password123\",\n  \"email\": \"newuser@example.com\",\n  \"name\": \"Имя\",\n  \"surname\": \"Фамилия\",\n  \"phone\": \"+79001234567\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/users/register",
              "host": ["{{base_url}}"],
              "path": ["api", "users", "register"]
            }
          }
        }
      ]
    },
    {
      "name": "Housing",
      "item": [
        {
          "name": "Get All Listings",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/aggregator/housing?district=Центральный&housingType=apartment&maxPrice=60000",
              "host": ["{{base_url}}"],
              "path": ["api", "aggregator", "housing"],
              "query": [
                {
                  "key": "district",
                  "value": "Центральный"
                },
                {
                  "key": "housingType",
                  "value": "apartment"
                },
                {
                  "key": "maxPrice",
                  "value": "60000"
                }
              ]
            }
          }
        },
        {
          "name": "Create Listing",
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "title",
                  "value": "Сдам квартиру в центре",
                  "type": "text"
                },
                {
                  "key": "description",
                  "value": "Уютная квартира с мебелью",
                  "type": "text"
                },
                {
                  "key": "housingType",
                  "value": "apartment",
                  "type": "text"
                },
                {
                  "key": "district",
                  "value": "Центральный",
                  "type": "text"
                },
                {
                  "key": "address",
                  "value": "Невский проспект, 1",
                  "type": "text"
                },
                {
                  "key": "price",
                  "value": "50000",
                  "type": "text"
                },
                {
                  "key": "pricePeriod",
                  "value": "month",
                  "type": "text"
                },
                {
                  "key": "rooms",
                  "value": "2",
                  "type": "text"
                },
                {
                  "key": "area",
                  "value": "45",
                  "type": "text"
                },
                {
                  "key": "floor",
                  "value": "3",
                  "type": "text"
                },
                {
                  "key": "totalFloors",
                  "value": "5",
                  "type": "text"
                },
                {
                  "key": "contactPhone",
                  "value": "+79001234567",
                  "type": "text"
                },
                {
                  "key": "contactEmail",
                  "value": "email@example.com",
                  "type": "text"
                },
                {
                  "key": "images",
                  "type": "file",
                  "src": []
                }
              ]
            },
            "url": {
              "raw": "{{base_url}}/api/aggregator/housing",
              "host": ["{{base_url}}"],
              "path": ["api", "aggregator", "housing"]
            }
          }
        },
        {
          "name": "Get Listing by ID",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/aggregator/housing/1",
              "host": ["{{base_url}}"],
              "path": ["api", "aggregator", "housing", "1"]
            }
          }
        },
        {
          "name": "Get My Listings",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/users/my-listings",
              "host": ["{{base_url}}"],
              "path": ["api", "users", "my-listings"]
            }
          }
        }
      ]
    }
  ]
}

